<% unless current_user %>
    <div class="container landing-page">
      <div class="hero-image">
        <div class="header">
          <div class="brandname">
            <%= link_to "PETPHOTOS", root_path %>
          </div>
          <div class="authen-buttons">
            <%= link_to new_user_session_path, :class => "sign-in-btn btn" do %>
                Login
            <% end %>
            <%= link_to new_user_registration_path, :class => "sign-up-btn btn" do %>
                Register
            <% end %>
          </div>
        </div>
        <div class="hero-text">
          <h1>Connect to PetPhotos</h1>
          <p>Discover, explore and share your pet photo with people from all around the world.</p>
          <%= link_to new_user_registration_path, :class => "btn" do %>
              Sign up
          <% end %>
        </div>
      </div>

      <div class="search-upload row">
        <div class="col-md-6 col-md-offset-1 search-wrapper">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search for kawaiiii animal ...">
            <div class="input-group-btn">
              <button class="btn btn-default" type="submit">
                <i class="glyphicon glyphicon-search"></i>
              </button>
            </div>
          </div>
        </div>
        <p class="col-md-1 hidden-xs">or</p>
        <div class="col-md-2">
          <%= link_to new_user_session_path, :class => "upload-btn btn" do %>
              Upload your own
          <% end %>
        </div>
      </div>

      <!-- start trending for guest -->
